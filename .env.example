# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME

# Auth.js / NextAuth
NEXTAUTH_SECRET=replace-with-strong-secret
NEXTAUTH_URL=https://your-domain.tld
AUTH_SECRET=replace-with-strong-secret
AUTH_URL=https://your-domain.tld

# GitHub OAuth
GITHUB_ID=your-github-oauth-client-id
GITHUB_SECRET=your-github-oauth-client-secret

# Email provider (SMTP)
EMAIL_SERVER=smtp://USER:PASSWORD@HOST:PORT
EMAIL_FROM=Your App <no-reply@your-domain.tld>

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx

# App base URL (used for Stripe redirect URLs)
APP_URL=https://your-domain.tld
